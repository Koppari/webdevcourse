<p id="notice"><%= notice %></p>

<h1> <%= @style.name %> </h1>
<p>
  <%= @style.description %>
</p>

<h2>Beers</h2>

<tbody>
  <% @style.beers.each do |beer| %>
    <li><%= link_to beer.name, beer_path(beer.id) %></li>
  <% end %>
</tbody>

<% if current_user %>
    <%= link_to 'Edit', edit_style_path(@style) %>
    <%= link_to 'Destroy', @style, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>