<p id="notice"><%= notice %></p>

<h1>Beer styles</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @styles.each do |style| %>
      <tr>
        <td><%= link_to style.name, style_path(style.id) %></td>
        <td><%= link_to 'Edit', edit_style_path(style) if current_user %></td>
        <td><%= link_to 'Destroy', style, method: :delete, data: { confirm: 'Are you sure?' } if current_user %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<% if current_user %>
<%= link_to 'New Style', new_style_path %>
<% end %>