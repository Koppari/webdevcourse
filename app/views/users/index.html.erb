<p id="notice"><%= notice %></p>

<h1>User list</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Username</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <table>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.username, user %></td>
        </tr>
        <td>
          <% if user.blocked? %>
              <span class="label label-info">account frozen</span>
          <% end %>
        </td>
    <% end %>
    </tbody>
  </table>
</table>