<p id="notice"><%= notice %></p>

<h1>Beer clubs</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Founded</th>
    <th>City</th>
    <th colspan="1"></th>
  </tr>
  </thead>

  <tbody>
  <% @beer_club.each do |beer_club| %>
      <tr>
        <td><%= link_to beer_club.name, beer_club  %></td>
        <td><%= beer_club.founded %></td>
        <td><%= beer_club.city %></td>
        <td><%= link_to 'Remove', beer_club, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' if current_user %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to('New club', new_beer_club_path, class:'btn btn-primary') if current_user %>