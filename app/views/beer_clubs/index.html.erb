<p id="notice"><%= notice %></p>

<h1>Beer clubs</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Founded</th>
    <th>City</th>
    <th colspan="1"></th>
  </tr>
  </thead>

  <tbody>
  <% @beer_club.each do |beer_club| %>
      <tr>
        <td><%= link_to beer_club.name, beer_club  %></td>
        <td><%= beer_club.founded %></td>
        <td><%= beer_club.city %></td>
        <td><%= link_to 'Remove', beer_club, method: :delete, data: { confirm: 'Are you sure?' } if current_user %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to('Add a new club', new_beer_club_path) if current_user %>